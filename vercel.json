{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    { "src": "api/drive.py",              "use": "@vercel/python" },
    {
      "src": "my-react-app/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "^/api/(.*)",   "dest": "/api/drive.py" },
    { "src": "^/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)",         "dest": "/index.html" }
  ]
}
